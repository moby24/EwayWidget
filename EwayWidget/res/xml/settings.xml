<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.ewaywidget.config.SeekBarDialog
        android:key="prefGpsInterval"
        android:layout="@layout/preference_item_layout"
        android:summary="%1$d sec"
        android:title="GPS Interval" />

    <com.ewaywidget.config.SeekBarDialogRadius
        android:key="dialogSeekBarPreferenceRadius"
        android:layout="@layout/preference_item_layout"
        android:summary="%1$d m"
        android:title="Nearby radius" />

    <Preference
        android:defaultValue="Україна"
        android:key="country"
        android:layout="@layout/preference_item_layout"
        android:summary="Україна"
        android:title="Default Country" />
    <Preference
        android:defaultValue="Київ"
        android:key="city"
        android:layout="@layout/preference_item_layout"
        android:summary="Київ"
        android:title="Default City" />

    <com.ewaywidget.config.MyListPreference
        android:defaultValue="Ручне"
        android:key="list"
        android:summary="%s"
        android:layout="@layout/preference_item_layout"
        android:title="Default Update" />

    <EditTextPreference
        android:defaultValue="5385"
        android:key="idstop"
        android:layout="@layout/preference_item_layout"
        android:title="ID Stop" 
        />

</PreferenceScreen>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
 android:Theme.Light Theme.AppCompat.Light
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
     <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="WhiteText" parent="AppBaseTheme">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="GreenText" parent="AppBaseTheme">
        <item name="android:textColor">#77cc00</item>
    </style>
    <style name="OrangeText" parent="AppBaseTheme">
        <item name="android:textColor">#f4b907</item>
    </style>
    <style name="BlueText" parent="AppBaseTheme">
        <item name="android:textColor">#1897f2</item>
    </style>

    <style name="RegularText" parent="AppBaseTheme">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>